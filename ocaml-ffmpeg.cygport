inherit ocaml

NAME="ocaml-ffmpeg"
VERSION=0.1.2
RELEASE=1
CATEGORY="Libs"
SUMMARY="OCaml libswscale bindings"
DESCRIPTION="OCaml bindings for the FFmpeg image rescaling library."
HOMEPAGE="http://savonet.sourceforge.net/"
SRC_URI="mirror://sourceforge/savonet/${NAME}-${VERSION}.tar.gz"

src_compile() {
	lndirs
	cd ${B}
	cygconf
	cygmake -j1
}
